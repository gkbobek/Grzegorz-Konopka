#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	float number;
	cout << "Give me a positive rational number: ";
	cin >> number;
	cin.get();
if (number >= 0)
{
	number = sqrt(number);
	cout << "Square of that number = " << number;
}
else
	{
		cout << "I TOLD YOU! GIVE A POSITIVE RATIONAL NUMBER!";
	}
    	return 0;
}

