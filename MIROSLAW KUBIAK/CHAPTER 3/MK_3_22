/*Napisz program, który wyświetla duże litery alfabetu od A do Z i od Z do A, z wykorzystaniem pętli for.*/

#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	for (int character = 'A'; character <= 'Z'; character++)
	{
		char character_project = character;
		cout << character_project;
		if (character == 'Z')
			cout << ".";
		else
			cout << ", ";
	}
	cout << endl << endl << endl;
	for (int character = 'Z'; character >= 'A'; character--)
	{
		char character_project = character;
		cout << character_project;
		if (character == 'A')
			cout << ".";
		else
			cout << ", ";
	}
	cin.get();
  	return 0;
}
