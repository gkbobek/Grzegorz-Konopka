/*Napisz program, który za pomocą instrukcji do ... while sumuje liczby całkowite od 1 do 100.*/

#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int i = 1;
	cout << "This program will sum natural integers from 1 to 100" << endl;
	int sum = 0;
	do
	{
		sum += i;
		i++;
	}
		while (i <= 100);
	cout << sum;
	cin.get();
	return 0;
}
