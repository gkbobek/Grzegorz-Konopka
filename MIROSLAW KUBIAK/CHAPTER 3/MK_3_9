// MK_3_9.cpp : Defines the entry point for the console application.
//
/*Napisz program, który za pomocą instrukcji while sumuje liczby całkowite od 1 do 100.*/
#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int i = 1;
	cout << "This program will sum natural integers from 1 to 100" << endl;
	int sum = 0;
	while (i <= 100)
	{
		sum += i;
		i++;
	}
	cout << sum;
	cin.get();
	return 0;
}
