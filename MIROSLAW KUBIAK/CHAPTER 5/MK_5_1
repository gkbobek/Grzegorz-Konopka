/*Napisz program obliczający pole prostokąta. Powinien on zawierać jeden podprogram: bezparametrową funkcję pole prostokata(),
w której zawarty będzie algorytm obliczania pola.Wartości boków a i b wprowadzamy z klawiatury. W programie należy założyć,
że zmienne a, b oraz pole są typu float (rzeczywistego) i są one zmiennymi globalnymi.
Należy dla nich przyjąć format wyświetlania ich z dwoma miejscami po kropce.*/

#include "stdafx.h"
#include <iostream>
#include <stdlib.h>
#include <iomanip>
using namespace std;
void area(double x, double y)
{
	double area = x * y;
	cout << fixed;
	cout << setprecision(2);
	cout << "Rectangular area = " << area << endl;
}

int main()
{
	cout << "Give me a: ";
	double a, b;
	cin >> a;
	cout << "Give me b: ";
	cin >> b;
	area(a, b);
	system("PAUSE");
  	return 0;
}
