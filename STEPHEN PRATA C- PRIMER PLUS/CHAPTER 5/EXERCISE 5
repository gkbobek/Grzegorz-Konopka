#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	const char *months[12] =
	{
		"January",
		"Febuary",
		"March",
		"April",
		"May",
		"June",
		"July",
		"August",
		"September",
		"October",
		"November",
		"December"
	};
	int sales[12];
		int i = 0;
		int sum = 0;
		for (i; i < 12; i++)
		{
	
			cout << "Podaj ilosc sprzedanych ksiazek w miesiacu: " << months[i] << " = ";
			cin >> sales[i];
			sum += sales[i];
		};
	cout << "Sprzedaz wyniosla: " << sum << " sztuk!" << endl;
	cin.get();
	cin.get();
  return 0;
}
