/*Napisz program, który za pomocą instrukcji do ... while wyświetla liczby całkowite od 1 do 20.*/

#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int x = 1;
	cout << "This program will give you numbers from 1 to 20." << endl;
	do
	{
		cout << x << endl;
		x++;
	}
	while (x <= 20);
	cin.get();
  	return 0;
}
