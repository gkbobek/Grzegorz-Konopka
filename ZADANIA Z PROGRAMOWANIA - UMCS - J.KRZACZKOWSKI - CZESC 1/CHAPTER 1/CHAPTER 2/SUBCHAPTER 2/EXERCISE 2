#include "stdafx.h"
#include <iostream>
#include <stdlib.h>
int factorial(int x);
using namespace std;

int main()
{
	cout << "Give me a natural integer: ";
	int integer;
	cin >> integer;
	factorial(integer);
	cout << "Factorial = " << factorial(integer) << endl;
	system("PAUSE");
    return 0;
}

int factorial(int x)
{
	int factorial = 1;
	if ((x == 0) && (x == 1))
		return 1;
	else
		for (int i = 2; i <= x; i++)
		{
			factorial *= i;
		}
	return factorial;
}
