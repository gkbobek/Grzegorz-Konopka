#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	for (;;)
	{
		cout << "SMALL CALCULATOR" << endl;
		cout << "Type 1 if u want to sum two numbers" << endl;
		cout << "Type 2 if u want to difference two numbers" << endl;
		cout << "Type 3 if u want to multiply two numbers" << endl;
		cout << "Type 4 if u want to divide two numbers " << endl << endl;
		cout << "Type 5 if u want to STOP " << endl;
		cout << "Yours choice: ";
		int choice;
		int a;
		int b;
		cin >> choice;
		system("CLS");
		switch (choice)
		{
		case 1:
		{
			cout << "Give me first number: ";
			cin >> a;
			cout << "Give me second number: ";
			cin >> b;
			cout << "Sum = " << a + b << endl;
			cin.get();
			cin.get();
			system("CLS");
		}
		break;
		case 2:
		{
			cout << "Give me first number: ";
			cin >> a;
			cout << "Give me second number: ";
			cin >> b;
			cout << "Sum = " << a - b << endl;
			cin.get();
			cin.get();
			system("CLS");
		}
		break;
		case 3:
		{
			cout << "Give me first number: ";
			cin >> a;
			cout << "Give me second number: ";
			cin >> b;
			cout << "Sum = " << a * b << endl;
			cin.get();
			cin.get();
			system("CLS");
		}
		break;
		case 4:
		{
			cout << "Give me first number: ";
			cin >> a;
			cout << "Give me second number: ";
			cin >> b;
			if (b == 0)
			{
				cout << "You can not divide by 0!!!";
				cin.get();
				cin.get();
				system("CLS");
			}
			else
			{
				cout << "Sum = " << a / b << endl;
				cin.get();
				cin.get();
				system("CLS");
			}
		}
		break;
		case 5:
		{
			exit(0);
		}
		break;
		default:
		{
			cout << "You didn't type 1, 2 or 3!!!";
			cin.get();
			cin.get();
			system("CLS");
		}

		}
	}
	return 0;
}
