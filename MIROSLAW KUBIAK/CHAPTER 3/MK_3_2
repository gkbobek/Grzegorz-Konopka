/*Napisz program, który za pomocą instrukcji do ... while dla danych wartości x zmieniających się od 0 do 10 oblicza wartość funkcji y = 3x.*/
#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int x = 0, y;
	cout << "This program will give u f(x) = 3x for X(0 - 10)" << endl;
	do
	{
		y = 3 * x;
		cout << "f(" << x << ")" << "= " << y << endl;
		x++;
	} while (x <= 10);
	cin.get();
  	return 0;
}
