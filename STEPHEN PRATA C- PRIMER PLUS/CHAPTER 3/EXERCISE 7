#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	const double galons_per_liter = 1/3.875;
	const double km_per_mile = 100/62.14;
	double lper100km;
	cout << "Podaj spalanie w l/100 km: ";
	cin >> lper100km;
	double miles_per_galon;
	miles_per_galon = 1 / (lper100km / 100 * galons_per_liter * km_per_mile);
	cout << "Spalanie: " << lper100km <<  miles_per_galon;
	cin.get();
	cin.get();
  	return 0;
}
