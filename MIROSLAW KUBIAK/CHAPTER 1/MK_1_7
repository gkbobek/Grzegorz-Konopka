/*Napisz program, który oblicza sumę, różnicę, iloczyn i iloraz dla dwóch liczb x i y wprowadzanych z klawiatury. W programie przyjmujemy, że liczby x i y są typu float (rzeczywistego).
Dla zmiennych x, y, suma, roznica, iloczyn i iloraz należy przyjąć format wyświetlania ich na ekranie z dokładnością dwóch miejsc po kropce.*/

#include "stdafx.h"
#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	float x, y, suma, roznica, iloczyn, iloraz;
	cout << "Give me x: ";
	cin >> x;
	cout << "Give me y: ";
	cin >> y;
	cin.get();
	suma = x + y;
	roznica = x - y;
	iloczyn = x * y;
	iloraz = x / y;
	cout << fixed << setprecision(2);
	cout << "Suma = " << suma << endl;
	cout << "Roznica = " << roznica << endl;
	cout << "Iloczyn = " << iloczyn << endl;
	cout << "Iloraz = " << iloraz << endl;
	cin.get();
  	return 0;
}
