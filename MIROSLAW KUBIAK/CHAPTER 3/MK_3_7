/*Napisz program, który za pomocą instrukcji for sumuje liczby całkowite od 1 do 100*/

#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	cout << "This program will sum natural integers from 1 to 100" << endl;
	int sum = 0;
	for (int i = 1; i <= 100; i++)
		sum += i;
	cout << sum;
	cin.get();
  	return 0;
}
