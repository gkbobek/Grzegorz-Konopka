#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	cout << "How many numbers do you want? ";
	int rozmiar;
	cin >> rozmiar;
	int *tablica = new int [rozmiar];
	for (int i = 0; i < rozmiar; i++)
	{
		cout << "Type number No. " << i + 1 << ": ";
		cin >> tablica[i];
	}
	system("CLS");
	for (int i = 0; i < rozmiar; i++)
		cout << "You typed: " << tablica[i] << endl;
	cin.get();
	cin.get();
	return 0;
}
